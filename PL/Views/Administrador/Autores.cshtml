@model ML.Libro
@{
    ViewBag.Title = "Autores";
}


<h2>Autores</h2>
<br />
<div class="col-3 col-sm-2">
    @Html.ActionLink("Regresar al Menu", "Administrador", "Administrador", new { @class = "btn btn-primary" })
</div>
<br />
<br />
<br />
<div class="table-responsive">
    <table class="table table-striped table-bordered" style="background-color: rgb( 213, 245, 227 )">
        <thead class="">
            <tr>
                <th>Autor</th>
                <th>Apellidos</th>
                <th>Titulo</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (ML.Libro libro in Model.Libros)
            {

                <tr>
                    <td>@libro.Autor.NombreAutor </td>
                    <td>@libro.Autor.ApellidoPaterno, @libro.Autor.ApellidoMaterno</td>
                    <td>@libro.Titulo</td>
                    <td><a class="btn btn-danger" onclick="return confirm('¿Seguro que deseas eliminar este libro?')" href="@Url.Action("AutorDelete", "Libro", new {IdLibro = libro.IdLibro, IdAutor = libro.Autor.IdAutor})">Eliminar</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>


